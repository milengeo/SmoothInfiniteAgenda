<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_ver_margin"
        android:layout_marginBottom="@dimen/list_item_ver_margin"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="55dp"
            android:layout_marginLeft="@dimen/list_item_ver_margin"
            >

            <TextView
                android:id="@+id/list_event_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_text_size"
                android:layout_gravity="center_horizontal"
                android:text="11:22"
                />
            <TextView
                android:id="@+id/list_event_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_text_size"
                android:layout_gravity="center_horizontal"
                android:text="33:44"
                />

        </LinearLayout>


        <View
            android:id="@+id/list_event_bar"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/list_item_ver_margin"
            android:background="@color/ListGroup"
        />

        <TextView
            android:id="@+id/list_event_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_ver_margin"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/list_text_size"
            android:text=""
            />
    </LinearLayout>


    <View style="@style/ItemDivider" />


</LinearLayout>
